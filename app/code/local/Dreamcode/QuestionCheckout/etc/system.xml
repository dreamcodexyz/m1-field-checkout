<?xml version="1.0"?>
<config>
    <tabs>
        <dreamcode translate="label">
            <label>Dreamcode Extension</label>
            <sort_order>400</sort_order>
        </dreamcode>
    </tabs>
    <sections>
        <questioncheckout translate="label" module="questioncheckout">
            <class>separator-top</class>
            <label>Question Checkout</label>
            <tab>dreamcode</tab>
            <frontend_type>text</frontend_type>
            <sort_order>300</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>Question Shipping</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>33</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <allow translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </allow>
                        <question translate="label">
                            <label>Question</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </question>
                        <options translate="label">
                            <label>Options</label>
                            <frontend_model>questioncheckout/system_config_form_field_questionoptions</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </options>
                    </fields>
                </general>

            </groups>
        </questioncheckout>
    </sections>
</config>